<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ProgramTA.Roasting_Coffee_Apps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Roast Observer</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6000" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/icon.png" />
        <icon density="mdpi" src="res/icon/icon.png" />
        <icon density="hdpi" src="res/icon/icon.png" />
        <icon density="xhdpi" src="res/icon/icon.png" />
        
        <splash src="res/icon/splash-landHDPI.png" density="land-hdpi"/>
        <splash src="res/icon/splash-landLDPI.png" density="land-ldpi"/>
        <splash src="res/icon/splash-landMDPI.png" density="land-mdpi"/>
        <splash src="res/icon/splash-landHDPI.png" density="land-xhdpi"/>

        <splash src="res/icon/splash-portHDPI.png" density="port-hdpi"/>
        <splash src="res/icon/splash-portLDPI.png" density="port-ldpi"/>
        <splash src="res/icon/splash-portMDPI.png" density="port-mdpi"/>
        <splash src="res/icon/splash-portHDPI.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
